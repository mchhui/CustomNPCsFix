package mchhui.customnpcsfix.util;

import mchhui.customnpcsfix.Config;
import noppes.npcs.client.gui.GuiScript;
import noppes.npcs.client.gui.util.GuiNPCInterface;

public class GUIHelper {
    public static void postInit(GuiNPCInterface gui) {
        if(gui instanceof GuiScript) {
            if(Config.DeleteScriptEditor) {
                gui.getButton(108).setEnabled(false);
                gui.getButton(108).setVisible(false);
            }
        }
    }
}
