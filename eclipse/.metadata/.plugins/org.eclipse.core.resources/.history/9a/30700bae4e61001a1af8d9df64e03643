package mchhui.customnpcsfix.util;

import mchhui.customnpcsfix.Config;
import noppes.npcs.controllers.Line;

public class NPCHelper {
    public static String onSay(String line) {
        if(!Config.NoMsgPercentSymbolBug) {
            return line;
        }
        return line.replace("%", "%%");
    }
}
