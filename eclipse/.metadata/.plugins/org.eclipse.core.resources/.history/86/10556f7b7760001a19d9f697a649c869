package mchhui.customnpcsfix;

import java.io.File;
import java.io.UnsupportedEncodingException;

import org.bukkit.Bukkit;
import org.bukkit.plugin.InvalidDescriptionException;
import org.bukkit.plugin.InvalidPluginException;
import org.bukkit.plugin.UnknownDependencyException;

public class BukkitLoader {
    public static void load() throws UnknownDependencyException, InvalidPluginException, InvalidDescriptionException, UnsupportedEncodingException {
        String path=BukkitLoader.class.getProtectionDomain().getCodeSource().getLocation().getFile();
        Bukkit.getPluginManager().loadPlugin(new File(path));
    }
}
